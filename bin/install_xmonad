#!/bin/bash

echo 'Installing xmonad!'

# install packages
sudo apt-get install xmonad feh xmobar trayer dmenu libghc6-xmonad-contrib-dev libghc6-xmonad-dev

# copy configs
mkdir ~/.xmonad
cp ~/.dotfiles/conf/xmonad/xmonad.hs ~/.xmonad
cp ~/.dotfiles/conf/xmonad/.xmobarrc ~/.xmonad
mkdir ~/.xmonad/scripts
cp ~/.dotfiles/conf/xmonad/cputemp.sh ~/.xmonad/scripts
cp ~/.dotfiles/conf/xmonad/volume.sh ~/.xmonad/scripts
cp ~/.dotfiles/conf/xmonad/blue.jpg ~/Pictures
sudo chmod -R 777 ~/.xmonad/
sudo chmod -R 777 ~/Pictures

